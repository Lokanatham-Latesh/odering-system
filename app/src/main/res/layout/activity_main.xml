<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/lls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent">

        <SearchView
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"></SearchView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:src="@drawable/food1">

            </ImageView>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:src="@drawable/food2">

            </ImageView>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:src="@drawable/juicie">

            </ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="FOOD TO BUY"
            android:textColor="@color/white"
            android:textSize="50px"></TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="371dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="20sp"
                    app:cardBackgroundColor="@color/teal_200">

                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="60dp">

                        <Button
                            android:id="@+id/cart"
                            android:layout_width="75dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="220dp"
                            android:layout_marginRight="50dp"
                            android:text="Cart"></Button>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="bottom"
                            android:text="$ 100.00"
                            android:textSize="40px"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="Qty"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:hint="enter"
                            android:inputType="number">

                        </EditText>

                        <Button
                            android:id="@+id/btn"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="20dp"
                            android:text="buy"
                            android:backgroundTint="#FF5722"></Button>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="20sp"
                    app:cardBackgroundColor="@color/teal_200">

                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="60dp">

                        <Button
                            android:id="@+id/cart2"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="220dp"
                            android:layout_marginRight="50dp"
                            android:background="@color/black"
                            android:text="Cart"></Button>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="55dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="bottom"
                            android:text="$ 100.00"
                            android:textSize="40px"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="Qty"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:hint="enter"
                            android:inputType="number">

                        </EditText>

                        <Button
                            android:id="@+id/btn2"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:text="buy"
                            android:backgroundTint="#FF5722"></Button>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="20sp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/teal_200">

                    <LinearLayout
                        android:layout_width="400dp"
                        android:layout_height="60dp">

                        <Button
                            android:id="@+id/cart3"
                            android:layout_width="73dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="220dp"
                            android:layout_marginRight="50dp"
                            android:text="Cart"></Button>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="bottom"
                            android:text="$ 100.00"
                            android:textSize="40px"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="Qty"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:hint="enter"
                            android:inputType="number">

                        </EditText>

                        <Button
                            android:id="@+id/btn3"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:text="buy"
                            android:backgroundTint="#FF5722"></Button>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>